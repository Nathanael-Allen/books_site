<div class="flex flex-col md:w-2/4 justify-center items-center md:m-auto">
    <h4 class="font-bold text-4xl py-2 border-b w-full text-center">Reviews</h4>
    <div class="flex w-full justify-center items-center pt-4">
        <input class="w-3/4 text-black rounded-lg p-1 mt-2 mb-6 focus:outline-none focus:ring focus:ring-sky-500" id="search-bar" placeholder="Search..." type="search" name="search-bar" hx-post="/books/search" hx-trigger="input changed delay:500ms" hx-target="#main-div" hx-preserve="true" autocomplete="off" autofocus>
    </div>
    <ul class="max-lg:block w-full">
        <% books.forEach(book => { %>
        <li>
            <div class="max-sm:block rounded-lg bg-gray-800 grid grid-cols-3 my-8">
                <div class="p-4">
                    <p class="font-semibold text-sky-500 text-xl col-start-1 pb-1"><%= book.title %></p>
                    <p class="col-start-1"><%= book.author %></p>
                    <p class="col-start-1 pt-4"><%= book.rating %>/10</p>
                </div>
                <p class="col-start-2 col-span-2 row-start-1 overflow-scroll p-4"><%= book.review %></p>
            </div>
        </li>
        <% }) %>
    </ul>
</div>